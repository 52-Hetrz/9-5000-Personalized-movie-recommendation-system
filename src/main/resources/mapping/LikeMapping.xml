<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.LikeMapper">

    <resultMap id="BaseResultMap" type="Like">
        <result column="musicId"    property="musicId"  jdbcType="INTEGER" />
        <result column="userId"     property="userId"   jdbcType="VARCHAR" />
    </resultMap>

    <insert id="insertLike">
        insert into `like`(userId,musicId) values(#{param1},#{param2})
    </insert>

    <delete id="deleteLikeByUserAndMusicId">
        delete from `like` where userId=#{param1} and musicId=#{param2}
    </delete>

    <select id="selectCommentsByUserId" resultType="Comment">
        select * from comment where userId=#{userId}
    </select>





</mapper>